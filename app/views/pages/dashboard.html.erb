<div class="container dashboard mt-5 text-decoration-none">
  <h2>TABLEAU DE BORD</h2>
  <p>Bonjour, <%= current_user.name %></p>

  <div class="dashboard-cards">
    <div class="card mb-5">
      <div class="card-body d-flex justify-content-between align-items-center">
        <i class="fa-regular fa-user"></i>
        <%= link_to "Informations personnelles", infos_dashboard_path, class: "stretched-link" %>
        <i class="fa-solid fa-caret-right"></i>
      </div>
    </div>

    <div class="card mb-5">
      <div class="card-body d-flex justify-content-between align-items-center">
        <i class="fa-regular fa-heart"></i>
        <%= link_to "Mes favoris", favorites_dashboard_path, class: "stretched-link" %>
        <i class="fa-solid fa-caret-right"></i>
      </div>
    </div>

    <div class="card mb-5">
      <div class="card-body d-flex justify-content-between align-items-center">
        <i class="fa-solid fa-magnifying-glass"></i>
        <%= link_to "Mes résultats", results_dashboard_path, class: "stretched-link" %>
        <i class="fa-solid fa-caret-right"></i>
      </div>
    </div>

  <%# <div class="mesachats">
